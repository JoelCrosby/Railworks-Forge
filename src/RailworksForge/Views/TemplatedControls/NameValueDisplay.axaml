<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:RailworksForge.Views.TemplatedControls">
    <Design.PreviewWith>
        <Border Padding="16, 8">
            <controls:NameValueDisplay Heading="Scenario Name" Value="Railworks Scenario" />
        </Border>
    </Design.PreviewWith>

    <Style Selector="controls|NameValueDisplay">
        <Setter Property="Template">
            <ControlTemplate>

                <StackPanel >
                    <TextBlock FontWeight="SemiBold" Text="{TemplateBinding Heading}" />
                    <TextBlock Text="{TemplateBinding Value}" />
                </StackPanel>

            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
